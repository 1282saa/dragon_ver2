apiVersion: v1
kind: Secret
metadata:
  name: chatbot-secrets
type: Opaque
data:
  # API 키를 base64로 인코딩한 값으로 대체하세요
  # base64 인코딩 방법: echo -n 'your-api-key' | base64
  openai-api-key: YOUR_BASE64_ENCODED_OPENAI_API_KEY
  perplexity-api-key: YOUR_BASE64_ENCODED_PERPLEXITY_API_KEY
  flask-secret-key: YOUR_BASE64_ENCODED_FLASK_SECRET_KEY # 예: echo -n 'some-random-secret-key' | base64